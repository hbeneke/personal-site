---
import PrintLayout from "@layouts/print-layout.astro";
import { calculateDuration } from "@utils/date";
import { getAllWorkExperiences, getWorkExperienceYears } from "@utils/resume";
import { siteConfig } from "@site-config";

const work_experience = await getAllWorkExperiences();
const years = await getWorkExperienceYears();
---

<PrintLayout
  title={`Resume ¬∑ ${siteConfig.siteTitle}`}
  description={`Professional resume of ${siteConfig.authorName}, a Senior ${siteConfig.jobTitle} specializing in Javascript and modern web technologies.`}
>
  <div class="awesome-cv" style="max-width: 210mm; margin: 0 auto; padding: 1.4cm;">
    <!-- Header -->
    <header class="awesome-header">
      <div class="awesome-header-name">
        <span class="awesome-header-firstname">Enrique</span><span class="awesome-header-lastname">Quero</span>
      </div>
      <div class="awesome-header-position">Senior {siteConfig.jobTitle}</div>
      <div class="awesome-header-address">Madrid, Spain</div>
      <div class="awesome-header-social">
        <span>üì± (+34) 654-080-196</span>
        <span class="awesome-header-social-sep"></span>
        <span>‚úâÔ∏è equero@kracode.com</span>
        <span class="awesome-header-social-sep"></span>
        <span>üåê {siteConfig.siteUrl.replace('https://', '')}</span>
        <span class="awesome-header-social-sep"></span>
        <span>üíº LinkedIn</span>
        <span class="awesome-header-social-sep"></span>
        <span>üêô GitHub</span>
      </div>
      <div class="awesome-header-quote">"Never Stop Learning."</div>
    </header>

    <!-- Summary Section -->
    <section class="awesome-section">
      <h2 class="awesome-section-title">
        <span class="awesome-section-title-colored">Summary</span>
      </h2>
      <div class="awesome-paragraph">
        {calculateDuration(years.start, years.end)} experience specializing in Web Development. Linux Lover and interested in devising a better problem-solving method for challenging tasks, and learning new technologies and tools if the need arises.
      </div>
    </section>

    <!-- Work Experience Section -->
    <section class="awesome-section">
      <h2 class="awesome-section-title">
        <span class="awesome-section-title-colored">Work Experience</span>
      </h2>
      <div class="awesome-entries">
        {
          work_experience.map((experience) => (
            <div class="awesome-entry">
              <div class="awesome-entry-header">
                <div class="awesome-entry-left">
                  <div class="awesome-entry-title">{experience.company}</div>
                  <div class="awesome-entry-position">{experience.position}</div>
                </div>
                <div class="awesome-entry-right">
                  <div class="awesome-entry-location">{experience.location}</div>
                  <div class="awesome-entry-date">
                    {`${experience.start_date} ‚Äì ${experience.end_date}`}
                  </div>
                </div>
              </div>
              <div class="awesome-entry-description">
                {experience.description}
              </div>
              {experience.responsibilities && experience.responsibilities.length > 0 && (
                <ul class="awesome-items">
                  {experience.responsibilities.map((responsibility) => (
                    <li>{responsibility}</li>
                  ))}
                </ul>
              )}
            </div>
          ))
        }
      </div>
    </section>
  </div>
</PrintLayout>
