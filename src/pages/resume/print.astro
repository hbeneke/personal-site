---
import PrintLayout from "@layouts/print-layout.astro";
import { calculateDuration } from "@utils/date";
import { getAllWorkExperiences, getWorkExperienceYears } from "@utils/resume";
import { siteConfig } from "@site-config";

const work_experience = await getAllWorkExperiences();
const years = await getWorkExperienceYears();
---

<PrintLayout
  title={`Resume · ${siteConfig.siteTitle}`}
  description={`Professional resume of ${siteConfig.authorName}, a Senior ${siteConfig.jobTitle} specializing in Javascript and modern web technologies.`}
>
  <div class="resume-container max-w-3xl">
    <header class="text-center mb-6">
      <span class="text-[32pt] mr-1 font-light text-resume-gray">Enrique</span>
      <span class="text-[32pt] font-bold text-resume-text">Quero</span>
      <div
        class="text-[8pt] mb-1 tracking-wider uppercase font-small-caps text-resume-red"
      >
        Senior {siteConfig.jobTitle} / Tech lead
      </div>
      <div class="text-[6pt] mb-3">
        <span>tel: (+34) 654-080-196 |</span>
        <span>email: equero@proton.me |</span>
        <span>github: hbeneke</span>
      </div>
      <div class="text-[9pt] italic">"Never Stop Learning."</div>
    </header>

    <section class="my-3">
      <h2
        class="resume-section-title text-[16pt] font-bold mb-2 flex items-center text-resume-text"
      >
        <span class="text-resume-red">Summary</span>
      </h2>
      <div
        class="text-[9pt] mt-3 leading-relaxed text-justify font-light text-resume-text"
      >
        {calculateDuration(years.start, years.end)} experience specializing in Web
        Development. Linux Lover and interested in devising a better problem-solving
        method for challenging tasks, and learning new technologies and tools if
        the need arises.
      </div>
    </section>

    <section class="my-3">
      <h2
        class="resume-section-title text-[16pt] font-bold mb-2 flex items-center text-resume-text"
      >
        <span class="text-resume-red">Work Experience</span>
      </h2>
      <div class="mt-3">
        {
          work_experience.map((experience) => (
            <div class="mb-2 break-inside-avoid">
              >
              <div class="resume-entry-header mb-1">
                <div class="resume-entry-left pr-4">
                  <div class="text-[10pt] font-bold mb-1 text-resume-dark">
                    {experience.company}
                  </div>
                  <div class="text-[8pt] tracking-wide font-small-caps text-resume-gray">
                    {experience.position}
                  </div>
                </div>
                <div class="resume-entry-right text-right">
                  <div class="text-[9pt] italic font-light text-resume-red">
                    {experience.location}
                  </div>
                  <div class="text-[8pt] italic font-light text-resume-gray">
                    {`${experience.start_date} – ${experience.end_date}`}
                  </div>
                </div>
              </div>
              <div class="text-[9pt] mt-1 leading-relaxed font-light text-resume-text">
                {experience.description}
              </div>
              {experience.responsibilities &&
                experience.responsibilities.length > 0 && (
                  <ul class="resume-items my-1 pl-8 list-none">
                    {experience.responsibilities.map((responsibility) => (
                      <li class="relative mb-1 pl-4 leading-relaxed font-light text-[9pt] text-resume-text">
                        {responsibility}
                      </li>
                    ))}
                  </ul>
                )}
            </div>
          ))
        }
      </div>
    </section>

    <section class="my-3">
      <h2
        class="resume-section-title text-[16pt] font-bold mb-2 flex items-center text-resume-text"
      >
        <span class="text-resume-red">Skills</span>
      </h2>
      <div class="mt-3">
        <div class="resume-skill mb-1">
          <div
            class="resume-skill-type text-[10pt] text-right pr-4 font-bold text-resume-dark"
          >
            Web Layout
          </div>
          <div
