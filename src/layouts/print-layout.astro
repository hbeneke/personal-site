---
import "@styles/global.css";
import "@styles/components/resume.css";
import { siteConfig } from "@site-config";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Professional resume of Enrique Quero - Software Engineer and Developer"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{`Resume print Â· ${siteConfig.siteTitle}`}</title>
  </head>
  <body
    class="text-gray-800 bg-white font-jetbrains"
    style="color: var(--resume-text);"
  >
    <main class="print-main">
      <slot />
    </main>
  </body>
</html>

<script>
  if (
    typeof window !== "undefined" &&
    window.location.search.includes("print=true")
  ) {
    window.addEventListener("load", () => {
      setTimeout(() => {
        window.print();
      }, 500);
    });
  }
</script>
