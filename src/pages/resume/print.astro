---
import PrintLayout from "@layouts/print-layout.astro";
import { calculateDuration } from "@utils/date";
import { getAllWorkExperiences, getWorkExperienceYears } from "@utils/resume";
import { siteConfig } from "@site-config";

const work_experience = await getAllWorkExperiences();
const years = await getWorkExperienceYears();
---

<PrintLayout
  title={`Resume ¬∑ ${siteConfig.siteTitle}`}
  description={`Professional resume of ${siteConfig.authorName}, a Senior ${siteConfig.jobTitle} specializing in Javascript and modern web technologies.`}
>
  <div class="resume-container max-w-[210mm] mx-auto">
    <header class="resume-header">
      <div class="resume-header-name">
        <span class="resume-header-firstname">Enrique</span><span class="resume-header-lastname">Quero</span>
      </div>
      <div class="resume-header-position">Senior {siteConfig.jobTitle}</div>
      <div class="resume-header-address">Madrid, Spain</div>
      <div class="resume-header-social">
        <span>üì± (+34) 654-080-196</span>
        <span class="resume-header-social-sep"></span>
        <span>‚úâÔ∏è equero@kracode.com</span>
        <span class="resume-header-social-sep"></span>
        <span>üåê {siteConfig.siteUrl.replace("https://", "")}</span>
        <span class="resume-header-social-sep"></span>
        <span>üíº LinkedIn</span>
        <span class="resume-header-social-sep"></span>
        <span>üêô GitHub</span>
      </div>
      <div class="resume-header-quote">"Never Stop Learning."</div>
    </header>

    <section class="resume-section">
      <h2 class="resume-section-title">
        <span class="resume-section-title-colored">Summary</span>
      </h2>
      <div class="resume-paragraph">
        {calculateDuration(years.start, years.end)} experience specializing in Web Development. Linux Lover and interested in devising a better problem-solving method for challenging tasks, and learning new technologies and tools if the need arises.
      </div>
    </section>

    <section class="resume-section">
      <h2 class="resume-section-title">
        <span class="resume-section-title-colored">Work Experience</span>
      </h2>
      <div class="resume-entries">
        {
          work_experience.map((experience) => (
            <div class="resume-entry">
              <div class="resume-entry-header">
                <div class="resume-entry-left">
                  <div class="resume-entry-title">{experience.company}</div>
                  <div class="resume-entry-position">{experience.position}</div>
                </div>
                <div class="resume-entry-right">
                  <div class="resume-entry-location">{experience.location}</div>
                  <div class="resume-entry-date">
                    {`${experience.start_date} ‚Äì ${experience.end_date}`}
                  </div>
                </div>
              </div>
              <div class="resume-entry-description">
                {experience.description}
              </div>
              {experience.responsibilities && experience.responsibilities.length > 0 && (
                <ul class="resume-items">
                  {experience.responsibilities.map((responsibility) => (
                    <li>{responsibility}</li>
                  ))}
                </ul>
              )}
            </div>
          ))
        }
      </div>
    </section>

    <section class="resume-section">
      <h2 class="resume-section-title">
        <span class="resume-section-title-colored">Skills</span>
      </h2>
      <div class="resume-skills">
        <div class="resume-skill">
          <div class="resume-skill-type">Web Layout</div>
          <div class="resume-skill-set">Extensive experience with CSS, HTML, and CSS extension languages (SASS, LESS).</div>
        </div>
        <div class="resume-skill">
          <div class="resume-skill-type">Frontend & Web Frameworks</div>
          <div class="resume-skill-set">Expertise in AngularJS, Angular2+, NgRx, Vue.js, Vuex, JavaScript (Vanilla), jQuery, TypeScript, ES6+.</div>
        </div>
        <div class="resume-skill">
          <div class="resume-skill-type">Backend & Frameworks</div>
          <div class="resume-skill-set">Proficient in PHP, Python, Symfony. Intermediate experience with Laravel and Node.js.</div>
        </div>
        <div class="resume-skill">
          <div class="resume-skill-type">Compiled Programming Languages</div>
          <div class="resume-skill-set">Basic experience with Java, focused on Android app development.</div>
        </div>
        <div class="resume-skill">
          <div class="resume-skill-type">Databases</div>
          <div class="resume-skill-set">Intermediate experience with MongoDB, SQL (MariaDB, MySQL). Currently pursuing MongoDB official certification.</div>
        </div>
        <div class="resume-skill">
          <div class="resume-skill-type">DevOps</div>
          <div class="resume-skill-set">Advanced proficiency in Linux environments, AWS, Google Cloud Platform. Experienced with Docker, currently undertaking a 40-hour course in Kubernetes.</div>
        </div>
        <div class="resume-skill">
          <div class="resume-skill-type">Agile Methodologies</div>
          <div class="resume-skill-set">Highly experienced with Scrum and Continuous Integration.</div>
        </div>
        <div class="resume-skill">
          <div class="resume-skill-type">Tools</div>
          <div class="resume-skill-set">Advanced proficiency in Git (GitFlow, ForkFlow).</div>
        </div>
        <div class="resume-skill">
          <div class="resume-skill-type">Languages</div>
          <div class="resume-skill-set">First Certificate in English (B2), Cambridge College. Native Spanish speaker.</div>
        </div>
      </div>
    </section>

    <section class="resume-section">
      <h2 class="resume-section-title">
        <span class="resume-section-title-colored">Education</span>
      </h2>
      <div class="resume-entries">
        <div class="resume-entry">
          <div class="resume-entry-header">
            <div class="resume-entry-left">
              <div class="resume-entry-title">IES AL-Andalus</div>
              <div class="resume-entry-position">Top Technician ~ DAM</div>
            </div>
            <div class="resume-entry-right">
              <div class="resume-entry-location">Almeria, Spain</div>
