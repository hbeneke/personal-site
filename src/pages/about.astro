---
import BaseLayout from "@layouts/base-layout.astro";
import { siteConfig } from "@site-config";
---

<BaseLayout
  title="About"
  description={`Get to know ${siteConfig.authorName}, a Senior ${siteConfig.jobTitle} with over 10 years of experience. Based in ${siteConfig.location}, available for freelance projects and full-time opportunities in web development.`}
  schemaType="Person"
  canonicalUrl={new URL("/about/", siteConfig.siteUrl)}
>
  <section>
    <header class="mb-8">
      <h1
        class="text-xl font-medium secondary mb-6 border-b border-gray-200 dark:border-gray-700 pb-2"
      >
        About
      </h1>
    </header>

    <div class="space-y-8">
      <!-- Intro -->
      <div>
        <p class="text-xs mb-2">
          Hi, I'm <span class="secondary font-bold"
            >{siteConfig.authorName}</span
          > (aka <span class="secondary">{siteConfig.nickname}</span>)
        </p>
        <p class="text-xs">
          <span class="secondary font-bold">{siteConfig.jobTitle}</span> → {
            siteConfig.location
          } → {siteConfig.timezone}
        </p>
      </div>

      <!-- Timeline style content -->
      <div class="space-y-6">
        <!-- Item 1 -->
        <div class="flex gap-4">
          <div class="flex-none w-1 bg-gray-300 dark:bg-gray-600 relative">
            <div
              class="absolute top-0 left-1/2 -translate-x-1/2 w-3 h-3 rounded-full bg-yellow-400"
            >
            </div>
          </div>
          <div class="flex-1 -mt-1">
            <h2 class="text-sm font-semibold mb-2 secondary">The Journey</h2>
            <p class="text-xs leading-relaxed">
              10+ years coding and still loving it. Started with curiosity,
              stayed for the constant evolution. Every project teaches me
              something new, and that's what keeps me excited about this field.
            </p>
          </div>
        </div>

        <!-- Item 2 -->
        <div class="flex gap-4">
          <div class="flex-none w-1 bg-gray-300 dark:bg-gray-600 relative">
            <div
              class="absolute top-0 left-1/2 -translate-x-1/2 w-3 h-3 rounded-full bg-yellow-400"
            >
            </div>
          </div>
          <div class="flex-1 -mt-1">
            <h2 class="text-sm font-semibold mb-2 secondary">Right Now</h2>
            <p class="text-xs leading-relaxed mb-2">
              Working full-time, building cool things, solving interesting
              problems. Also taking on freelance projects when they align with
              my interests.
            </p>
            <p class="text-xs leading-relaxed">
              My sweet spot: performance optimizations, code reviews,
              architecture decisions, and helping teams write better code.
            </p>
          </div>
        </div>

        <!-- Item 3 -->
        <div class="flex gap-4">
          <div class="flex-none w-1 bg-gray-300 dark:bg-gray-600 relative">
            <div
              class="absolute top-0 left-1/2 -translate-x-1/2 w-3 h-3 rounded-full bg-yellow-400"
            >
            </div>
          </div>
          <div class="flex-1 -mt-1">
            <h2 class="text-sm font-semibold mb-2 secondary">Open To</h2>
            <p class="text-xs leading-relaxed">
              → Freelance projects & consulting<br />
              → Full-time opportunities (if the fit is right)<br />
              → Open source contributions<br />
              → Helping nonprofits & educational projects
            </p>
          </div>
        </div>

        <!-- Item 4 -->
        <div class="flex gap-4">
          <div class="flex-none w-1 bg-gray-300 dark:bg-gray-600 relative">
            <div
              class="absolute top-0 left-1/2 -translate-x-1/2 w-3 h-3 rounded-full bg-yellow-400"
            >
            </div>
          </div>
          <div class="flex-1 -mt-1">
            <h2 class="text-sm font-semibold mb-2 secondary">Let's Connect</h2>
            <p class="text-xs leading-relaxed mb-3">
              Best way to reach me: <span class="secondary italic"
                >{siteConfig.obfuscatedEmail}</span
              >
              <br />I typically respond within 24 hours.
            </p>
            <p class="text-xs">
              Find me on <a
                class="primary-link"
                href={siteConfig.socialLinks.linkedin}
                target="_blank"
                rel="noopener noreferrer">LinkedIn</a
              >,
              <a
                class="primary-link"
                href={siteConfig.socialLinks.github}
                target="_blank"
                rel="noopener noreferrer">GitHub</a
              >, or
              <a
                class="primary-link"
                href={siteConfig.socialLinks.x}
                target="_blank"
                rel="noopener noreferrer">X</a
              >
            </p>
          </div>
        </div>
      </div>

      <!-- Bottom note -->
      <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
        <p class="text-xs italic">
          I Believe in giving back to the developer community. If you're working
          on something meaningful that could use my help, let's talk!
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
