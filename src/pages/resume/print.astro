---
import PrintLayout from "@layouts/print-layout.astro";
import { getAllWorkExperiences, getWorkExperienceYears } from "@utils/resume";
import { siteConfig } from "@site-config";

const work_experience = await getAllWorkExperiences();
const years = await getWorkExperienceYears();
---

<PrintLayout
  title={`Resume · ${siteConfig.siteTitle}`}
  description={`Professional resume of ${siteConfig.authorName}, a Senior ${siteConfig.jobTitle} specializing in Javascript and modern web technologies.`}
>
  <div class="m-0 text-xs leading-relaxed px-8 max-w-3xl mx-auto">
    <header class="text-center mb-6">
      <span class="text-[32pt] mr-1 font-light text-gray-600">Enrique</span>
      <span class="text-[32pt] font-bold text-gray-800">Quero</span>
      <div
        class="text-[8pt] mb-1 tracking-wider uppercase font-small-caps text-red-600"
      >
        Senior {siteConfig.jobTitle} / Tech lead
      </div>
      <div class="text-[6pt] mb-3">
        <span>tel: (+34) 654-080-196 |</span>
        <span>email: equero@proton.me |</span>
        <span>github: hbeneke</span>
      </div>
      <div class="text-[9pt] italic">"Never Stop Learning."</div>
    </header>

    <section class="my-3">
      <h2
        class="text-[16pt] font-bold mb-2 flex items-center text-gray-800 section-title-line"
      >
        <span class="text-red-600">Sum</span>mary
      </h2>
      <div
        class="text-[9pt] mt-3 leading-relaxed text-justify font-light text-gray-800"
      >
        Web developer with over 10 years of experience in web development,
        always looking for new challenges and projects that feed my motto of
        "Never Stop Learning."
      </div>
    </section>

    <section class="my-3">
      <h2
        class="text-[16pt] font-bold mb-2 flex items-center text-gray-800 section-title-line"
      >
        <span class="text-red-600">Wor</span>k Experience
      </h2>
      <div class="mt-3">
        {
          work_experience.map((experience) => (
            <div class="mb-2 break-inside-avoid">
              <div class="table w-full table-fixed mb-1">
                <div class="table-cell align-top pr-4 w-entry-left">
                  <div class="text-[12pt] font-bold mb-1 text-gray-800">
                    {experience.company}
                  </div>
                  <div class="text-[8pt] font-semibold uppercase text-gray-500">
                    {experience.position}
                  </div>
                </div>
                <div class="table-cell align-top text-right w-entry-right">
                  <div class="text-sm italic font-light text-red-600">
                    {experience.location}
                  </div>
                  <div class="text-[8pt] italic font-light text-gray-600">
                    {`${experience.start_date} – ${experience.end_date}`}
                  </div>
                </div>
              </div>
              {experience.responsibilities &&
                experience.responsibilities.length > 0 && (
                  <ul class="list-none pl-1">
                    {experience.responsibilities.map((responsibility) => (
                      <li class="relative pl-3 font-light text-[9pt] text-gray-800 bullet-point tracking-tighter">
                        {responsibility}
                      </li>
                    ))}
                  </ul>
                )}
            </div>
          ))
        }
      </div>
    </section>

    <section class="my-3">
      <h2
        class="text-[16pt] font-bold mb-2 flex text-gray-800 section-title-line"
      >
        <span class="text-red-600">Ski</span>lls
      </h2>
      <div class="mt-3">
        <div class="table w-full mb-1">
          <div
            class="table-cell align-top text-right pr-4 font-bold text-gray-800 text-xs w-1/5"
          >
            Frontend
          </div>
          <div
            class="table-cell text-xs tracking-tighter font-light text-gray-800"
          >
            Angular, Vue, jQuery (Vanilla), TypeScript, ES6+
          </div>
        </div>
        <div class="table w-full mb-1">
          <div
            class="table-cell align-top text-right pr-4 font-bold text-gray-800 text-xs w-1/5"
          >
            Backend
          </div>
          <div
            class="table-cell text-xs tracking-tighter font-light text-gray-800"
          >
            PHP, Python, Symfony, Laravel, Node.js
          </div>
        </div>
        <div class="table w-full mb-1">
          <div
            class="table-cell align-top text-right pr-4 font-bold text-gray-800 text-xs w-1/5"
          >
            Databases
          </div>
          <div
            class="table-cell text-xs tracking-tighter font-light text-gray-800"
          >
            MongoDB, SQL (MySQL, Oracle), Supabase, SqlLite, Redis
          </div>
        </div>
        <div class="table w-full mb-1">
          <div
            class="table-cell align-top text-right pr-4 font-bold text-gray-800 text-xs w-1/5"
          >
            DevOps
          </div>
          <div
            class="table-cell text-xs tracking-tighter font-light text-gray-800"
          >
            CI/CD, AWS, Google Cloud, Docker, Kubernetes, Github Actions,
            Jenkins
          </div>
        </div>
        <div class="table w-full mb-1">
          <div
            class="table-cell align-top text-right pr-4 font-bold text-gray-800 text-xs w-1/5"
          >
            Agile
          </div>
          <div
            class="table-cell text-xs tracking-tighter font-light text-gray-800"
          >
            Scrum, CI/CD, Kanban
          </div>
        </div>
        <div class="table w-full mb-1">
          <div
            class="table-cell align-top text-right pr-4 font-bold text-gray-800 text-xs w-1/5"
          >
            Tools
          </div>
          <div
            class="table-cell text-xs tracking-tighter font-light text-gray-800"
          >
            Git (GitFlow, ForkFlow, PullRequestFlow), SVN
          </div>
        </div>
        <div class="table w-full mb-1">
          <div
            class="table-cell align-top text-right pr-4 font-bold text-gray-800 text-xs w-1/5"
          >
            Languages
          </div>
          <div
            class="table-cell text-xs tracking-tighter font-light text-gray-800"
          >
            First Certificate in English (B2), Cambridge College. Native Spanish
            speaker.
          </div>
        </div>
      </div>
    </section>
    <section class="my-3">
      <h2
        class="text-[16pt] font-bold mb-2 flex items-center text-gray-800 section-title-line"
      >
        <span class="text-red-600">Hon</span>ors & Awards
      </h2>
      <div class="mt-3">
        <div class="text-[10pt] font-bold mb-1 text-gray-800">
          International
        </div>
        <div class="table w-full mb-2 text-[8pt]">
          <div
            class="table-cell align-top text-right pr-4 text-gray-800 text-[8pt] w-honor-date"
          >
            2015
          </div>
          <div class="table-cell text-[8pt] align-top px-1 w-honor-content">
            <span class="font-bold inline text-gray-700"
              >Most Voted by public</span
            >, <span class="inline text-gray-600">Startup Weekend Europe</span>
          </div>
          <div
            class="table-cell align-top text-right italic font-light text-red-600 w-honor-location"
          >
            Berlin, Germany
          </div>
        </div>
        <div class="text-[10pt] font-bold mb-1 text-gray-800">National</div>
        <div class="table w-full text-[8pt]">
          <div
            class="table-cell align-top text-right pr-4 text-gray-800 text-[8pt] w-honor-date"
          >
            2017
          </div>
          <div class="table-cell text-[8pt] align-top px-1 w-honor-content">
            <span class="font-bold inline text-gray-700">5th Position</span>, <span
              class="inline text-gray-600">Startup Weekend Madrid</span
            >
          </div>
          <div
            class="table-cell align-top text-right italic font-light text-red-600 w-honor-location"
          >
            Madrid, Spain
          </div>
        </div>
        <div class="table w-full text-[8pt]">
          <div
            class="table-cell align-top text-right pr-4 text-gray-800 text-[8pt] w-honor-date"
          >
            2016
          </div>
          <div class="table-cell text-[8pt] align-top px-1 w-honor-content">
            <span class="font-bold inline text-gray-700">2nd Place</span>, <span
              class="inline text-gray-600">Startup Weekend Madrid</span
            >
          </div>
          <div
            class="table-cell align-top text-right italic font-light text-red-600 w-honor-location"
          >
            Madrid, Spain
          </div>
        </div>
        <div class="table w-full text-[8pt]">
          <div
            class="table-cell align-top text-right pr-4 text-gray-800 text-[8pt] w-honor-date"
          >
            2015
          </div>
          <div class="table-cell text-[8pt] align-top px-1 w-honor-content">
            <span class="font-bold inline text-gray-700">Finalist</span>, <span
              class="inline text-gray-600">Startup Weekend Madrid</span
            >
          </div>
          <div
            class="table-cell align-top text-right italic font-light text-red-600 w-honor-location"
          >
            Madrid, Spain
          </div>
        </div>
        <div class="table w-full text-[8pt]">
          <div
            class="table-cell align-top text-right pr-4 text-gray-800 text-[8pt] w-honor-date"
          >
            2014-2017
          </div>
          <div class="table-cell text-[8pt] align-top px-1 w-honor-content">
            <span class="font-bold inline text-gray-700"
              >Betabeers Organizator</span
            >, <span class="inline text-gray-600">Betabeers Meetups</span>
          </div>
          <div
            class="table-cell align-top text-right italic font-light text-red-600 w-honor-location"
          >
            Almeria, Spain
          </div>
        </div>
      </div>
    </section>
  </div>
</PrintLayout>
