---
import BaseLayout from "@layouts/base-layout.astro";
import { siteConfig } from "@site-config";
---

<BaseLayout
  title="About"
  description={`Get to know ${siteConfig.authorName}, a Senior ${siteConfig.jobTitle} with over 10 years of experience. Based in ${siteConfig.location}, available for freelance projects and full-time opportunities in web development.`}
  schemaType="Person"
  canonicalUrl={new URL("/about/", siteConfig.siteUrl)}
>
  <section class="max-w-4xl mx-auto space-y-12">
    <div class="text-center space-y-6">
      <h1 class="text-2xl font-bold secondary">
        Hey! I'm {siteConfig.authorName}
      </h1>
      <p
        class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed"
      >
        I'm a <span class="secondary font-semibold">{siteConfig.jobTitle}</span>
        who's been coding for over 10 years and still gets excited about it! Currently
        working full-time but always curious about cool new projects.
      </p>
      <div
        class="flex justify-center items-center space-x-4 text-xs text-gray-500 dark:text-gray-400"
      >
        <span>{siteConfig.location}</span>
        <span>â€¢</span>
        <span>{siteConfig.timezone}</span>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2 space-y-8">
        <div
          class="bg-white dark:bg-gray-900 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm"
        >
          <h2 class="text-lg font-semibold mb-4 secondary">What I'm Up To</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <h3 class="font-medium text-sm secondary">
                Side Projects & Freelance
              </h3>
              <p class="text-xs text-gray-600 dark:text-gray-300">
                Building cool stuff, fixing performance issues, reviewing code,
                and generally helping people make their web dreams come true.
              </p>
            </div>
            <div class="space-y-2">
              <h3 class="font-medium text-sm secondary">
                Maybe Your Next Teammate?
              </h3>
              <p class="text-xs text-gray-600 dark:text-gray-300">
                Always open to interesting full-time opportunities with teams
                that value creativity and good vibes.
              </p>
            </div>
          </div>
        </div>

        <div
          class="bg-green-50 dark:bg-green-900/20 rounded-xl p-6 border border-green-200 dark:border-green-800"
        >
          <h2
            class="text-lg font-semibold mb-3 text-green-800 dark:text-green-200"
          >
            Giving Back
          </h2>
          <p class="text-xs text-green-700 dark:text-green-300">
            I believe in giving back to the developer community. If you're
            working on an open-source project, educational initiative, or
            nonprofit that could use my help, don't hesitate to reach out!
          </p>
        </div>
      </div>

      <div class="space-y-6">
        <div
          class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700"
        >
          <h2 class="text-lg font-semibold mb-4 secondary">Get In Touch</h2>
          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-medium secondary mb-2">
                Location & Time
              </h3>
              <p class="text-xs text-gray-600 dark:text-gray-300">
                {siteConfig.location}
              </p>
              <p class="text-xs text-gray-600 dark:text-gray-300">
                {siteConfig.timezone}
              </p>
            </div>
            <div>
              <h3 class="text-sm font-medium secondary mb-2">Direct Contact</h3>
              <p class="text-xs text-gray-600 dark:text-gray-300">
                <span>{siteConfig.obfuscatedEmail}</span>
              </p>
            </div>
          </div>
        </div>

        <div
          class="bg-yellow-50 dark:bg-yellow-900/20 rounded-xl p-6 border border-yellow-200 dark:border-yellow-800"
        >
          <h3
            class="text-sm font-semibold mb-2 text-yellow-800 dark:text-yellow-200"
          >
            Quick Response
          </h3>
          <p class="text-xs text-yellow-700 dark:text-yellow-300">
            I typically respond to emails and messages within 24 hours. For
            urgent inquiries, feel free to reach out via LinkedIn for faster
            communication.
          </p>
        </div>

        <div
          class="text-center p-4 bg-gray-50 dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700"
        >
          <p class="text-xs text-gray-600 dark:text-gray-400">
            Also known as <span class="secondary font-medium"
              >{siteConfig.nickname}</span
            >
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
